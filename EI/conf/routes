# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Página principal (CBase)
GET     /                           base.CBase.index()
POST    /getProfesor                base.CBase.mostrarProfesor()


# Páginas de alumnos (CAlumno)

GET     /alumno                       controllers.CAlumno.index()
POST    /iniciaSesionAlumno           controllers.CAlumno.iniciarSesionA()
GET     /cerrarSesionAlumno           controllers.CAlumno.cerrarSesionA()
POST    /registraAlumno               controllers.CAlumno.registrarA()
POST    /modificaAlumno               controllers.CAlumno.modificarInformacionA()
POST    /eliminaAlumno                controllers.CAlumno.eliminaRegistroA()


# Páginas de profesores (CProfesor)

GET     /profesor                     controllers.CProfesor.index()
POST    /iniciaSesionProfesor         controllers.CProfesor.iniciarSesionP()
GET     /cerrarSesionProfesor         controllers.CProfesor.cerrarSesionP()
POST    /registraProfesor             controllers.CProfesor.registrarP()
POST    /modificaProfesor             controllers.CProfesor.modificarInformacionP()
POST    /eliminaProfesor              controllers.CProfesor.eliminaRegistroP()
POST    /agregarCursoProfesor         controllers.CProfesor.agregarCursoP()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
